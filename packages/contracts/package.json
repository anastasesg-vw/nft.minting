{
  "name": "contracts",
  "version": "1.0.0",
  "description": "The package that contains the smart contracts used in the ApeGenerationX project.",
  "main": "index.js",
  "author": "Anastases Giannikopoulos",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn workspace contracts run server\" \"yarn workspace contracts run localhost\"",
    "server": "npx hardhat node",
    "test": "npx hardhat test",
    "build": "yarn workspace contracts run compile",
    "compile": "npx hardhat typechain",
    "localhost": "npx hardhat run scripts/deploy.ts --network localhost",
    "mainnet": "npx hardhat run scripts/deploy.ts --network mainnet"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.3",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.8",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/jest": "^28.1.1",
    "chai": "^4.3.6",
    "concurrently": "^7.2.1",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.9",
    "hardhat-gas-reporter": "^1.0.8",
    "jest": "^28.1.1",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.3"
  }
}
